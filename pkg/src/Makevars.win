FUNCLUSTERDIR = ./Funcluster/
FUNCLUSTERLIB = $(FUNCLUSTERDIR)libFuncluster.a
PKG_CPPFLAGS = -DRPACKAGE $(SHLIB_OPENMP_CXXFLAGS) -std=c++0x
## Use the R_HOME indirection to support installations of multiple R version
PKG_LIBS = `$(R_HOME)/bin/Rscript -e "Rcpp:::LdFlags()"` $(SHLIB_OPENMP_CXXFLAGS) -L$(FUNCLUSTERDIR) -lFuncluster

.PHONY: all Funcluster

all: $(SHLIB)
$(SHLIB): Funcluster


coclust:
	(cd $(FUNCLUSTERDIR) && $(MAKE))
	$(RANLIB) $(FUNCLUSTERLIB)
